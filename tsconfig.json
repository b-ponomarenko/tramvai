{
  "compilerOptions": {
    "incremental": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "dom"
    ],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "noErrorTruncation": true
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "allowJs": true,
    }
  }
}
